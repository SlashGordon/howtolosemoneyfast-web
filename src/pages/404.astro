---
import Layout from '../layouts/Layout.astro';

// Get the current URL path to determine the language
const { pathname } = Astro.url;
const lang = pathname.startsWith('/de') ? 'de' : 
             pathname.startsWith('/es') ? 'es' : 'en';

// Define the content for each language
const content = {
  en: {
    title: "Page Not Found - How To Lose Money Fast",
    heading: "Page Not Found",
    description: "The page you're looking for doesn't exist or has been moved.",
    button: "Return to Home",
    homeLink: "/"
  },
  de: {
    title: "Seite nicht gefunden - Wie man schnell Geld verliert",
    heading: "Seite nicht gefunden",
    description: "Die gesuchte Seite existiert nicht oder wurde verschoben.",
    button: "Zur칲ck zur Startseite",
    homeLink: "/de"
  },
  es: {
    title: "P치gina no encontrada - C칩mo perder dinero r치pidamente",
    heading: "P치gina no encontrada",
    description: "La p치gina que est치 buscando no existe o ha sido movida.",
    button: "Volver a la p치gina principal",
    homeLink: "/es"
  }
};

// Get the content for the current language
const { title, heading, description, button, homeLink } = content[lang];
---

<Layout title={title} lang={lang}>
  <div class="container mx-auto px-4 py-16 flex-grow flex flex-col items-center justify-center">
    <div class="text-center">
      <div class="inline-block animate-bounce mb-4">
        <span class="text-5xl">游눶</span>
      </div>
      <h1 class="text-5xl md:text-6xl font-extrabold mb-4 text-red-500">404</h1>
      <h2 class="text-2xl md:text-3xl font-bold mb-6">{heading}</h2>
      <p class="text-gray-300 mb-8 max-w-md mx-auto">{description}</p>
      <a href={homeLink} class="inline-flex bg-red-500 hover:bg-red-600 text-white font-medium py-3 px-6 rounded-md transition-all duration-300 shadow-md hover:shadow-lg">
        {button}
      </a>
    </div>
  </div>
</Layout>