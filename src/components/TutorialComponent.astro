    [3, 12, 26, 28, 47, 2, 11],
    [8, 11, 18, 19, 47, 4, 6],
    [1, 2, 29, 40, 49, 6, 7],
    [14, 18, 34, 36, 42, 4, 6],
    [2, 4, 12, 24, 48, 9, 12],
    [7, 13, 29, 39, 43, 1, 7],
