      </div>
      
      <div>
        <h3 class="text-xl font-bold mb-2">{t.roiTitle}</h3>
        <p class="mb-4">{t.roiText}</p>
      </div>
      
      <div>
        <h3 class="text-xl font-bold mb-2">{t.etfTitle}</h3>
        <p class="mb-4">{t.etfText}</p>
      </div>
    </div>
  </section>
  
