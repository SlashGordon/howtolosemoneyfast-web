---
import Layout from '../../layouts/Layout.astro';
---

<Layout title="Impressum - Wie man schnell Geld verliert" description="Rechtliche Informationen über den Betreiber der Website Wie man schnell Geld verliert, einer Finanzbildungswebsite über Lotteriespiele." lang="de">
  <div class="container mx-auto px-4 py-16">
    <header class="mb-8">
      <a href="/de" class="text-blue-400 hover:text-blue-300 mb-4 inline-block">← Zurück zur Startseite</a>
      <h1 class="text-4xl font-bold mb-4" data-i18n="impressum.title">Impressum</h1>
    </header>
    
    <section class="bg-gray-800 rounded-xl shadow-lg overflow-hidden border border-gray-700 p-6 mb-8">
      <div class="impressum-content">
        <div data-i18n="impressum.content">Rechtliche Informationen über den Website-Betreiber</div>
        
        <div class="mt-6">
          <h2 class="text-2xl font-bold mb-4">Angaben gemäß § 5 TMG</h2>
          <p class="mb-4">
            <span id="name"></span><br>
            <span id="address1"></span><br>
            <span id="address2"></span><br>
            Deutschland
          </p>
          
          <h3 class="text-xl font-bold mb-2">Kontakt</h3>
          <p class="mb-4">
            Telefon: <span id="phone"></span><br>
            E-Mail: <span id="email"></span>
          </p>
          
          <h3 class="text-xl font-bold mb-2">Verantwortlich für den Inhalt nach § 55 Abs. 2 RStV</h3>
          <p class="mb-4">
           <span id="name1_2"></span><br>
           <span id="address1_2"></span><br>
           <span id="address2_2"></span><br>
           Deutschland
          </p>
        </div>
      </div>
    </section>
  </div>
</Layout>

<script>
  import { i18n } from '../../i18n/i18n';
  import { initContactInfo } from '../../utils/contactEncryption';
  
  document.addEventListener('DOMContentLoaded', () => {
    // Set language to German
    localStorage.setItem('language', 'de');
    i18n.init();
    initContactInfo();
  });
</script>