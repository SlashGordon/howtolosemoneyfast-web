---

<div class="container mx-auto px-4 py-16">
  <header class="mb-8">
    <a href={backLink} class="text-blue-400 hover:text-blue-300 mb-4 inline-block">{backText}</a>
    <h1 class="text-4xl font-bold mb-4">{t.title}</h1>
    <p class="text-xl text-gray-300">{t.subtitle}</p>
  </header>
  
  <section class="bg-gray-800 rounded-xl shadow-lg overflow-hidden border border-gray-700 p-6 mb-8">
    <h2 class="text-2xl font-bold mb-4 text-red-300">{t.section1Title}</h2>
    
    <div class="space-y-6">
      <div>
        <h3 class="text-xl font-bold mb-2">{t.step1Title}</h3>
        <p class="mb-4">{t.step1Text}</p>
        <Image 
          src={tutorialImage} 
          alt={t.imageAlt} 
          width={800} 
          height={450} 
          class="rounded-lg border border-gray-600" 
          quality="mid"
          loading="eager"
        />
      </div>
      
      <div>
        <h3 class="text-xl font-bold mb-2">{t.step2Title}</h3>
        <p class="mb-4">{t.step2Text}</p>
      </div>
      
      <div>
        <h3 class="text-xl font-bold mb-2">{t.step3Title}</h3>
        <p class="mb-4">{t.step3Text}</p>
      </div>
      
      <div>
        <h3 class="text-xl font-bold mb-2">{t.step4Title}</h3>
        <p class="mb-4">{t.step4Text}</p>
        <ul class="list-disc pl-6 space-y-2 text-gray-300">
          {t.step4List.map(item => (
            <li>{item}</li>
          ))}
        </ul>
      </div>
      
      <div>
        <h3 class="text-xl font-bold mb-2">{t.step5Title}</h3>
        <p class="mb-4">{t.step5Text}</p>
      </div>
    </div>
  </section>
  
  <section class="bg-gray-800 rounded-xl shadow-lg overflow-hidden border border-gray-700 p-6 mb-8">
    <h2 class="text-2xl font-bold mb-4 text-red-300">{t.section2Title}</h2>
    
    <div class="space-y-6">
      <div>
